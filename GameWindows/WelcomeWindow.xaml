<Window x:Class="GameWindows.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GameWindows"
        mc:Ignorable="d"
        Title="WelcomeWindow" Height="250" Width="200">
    <Grid>
        <Label Name="WelcomeLabel" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" > Welcome, adavitav! </Label>
        <Grid VerticalAlignment="Bottom" Height="100">
            <Button FontSize="15" Width="100" Height="30" VerticalAlignment="Top" Click="ButtonNewGame_Click"> New Game </Button>
            <Button FontSize="15" Width="100" Height="30" VerticalAlignment="Bottom" Click="ButtonLoadGame_Click" Margin="20"> Load Game </Button>
        </Grid>
    </Grid>
</Window>
