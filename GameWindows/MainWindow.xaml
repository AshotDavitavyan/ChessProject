<Window x:Class="GameWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWindows"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="600">
    <Grid>
        <Label FontSize="30" HorizontalAlignment="Center"> Choose The Game </Label>
        <Grid Height="250">
            <Button Click="OpenGame1" Height="50" Width="100" FontSize="20" VerticalAlignment="Top"> Game1 </Button>
            <Button Click="OpenGame2" Height="50" Width="100" FontSize="20" VerticalAlignment="Center"> Game2 </Button>
            <Button Click="OpenGame3" Height="50" Width="100" FontSize="20" VerticalAlignment="Bottom">Game3 </Button>
        </Grid>
        <Grid Width="200" Height="500" HorizontalAlignment="Left">
            <Button Height="50" Width="100" FontSize="20" VerticalAlignment="Bottom" Click="Button_Click_Exit"> Exit </Button>
        </Grid>
    </Grid>
</Window>
