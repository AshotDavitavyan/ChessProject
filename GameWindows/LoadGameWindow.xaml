<Window x:Class="GameWindows.LoadGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="LoadGameWindow" Height="200" Width="200">
    <Grid>
        <Label FontSize="20" HorizontalAlignment="Center"> Select a Save </Label>
        <ComboBox Name="SavesComboBox" Height="30" Width="170">
        </ComboBox>
        <Button Height="20" Width="100" VerticalAlignment="Bottom" Margin="20" Click="ButtonLoad_Click"> Load </Button>
    </Grid>
</Window>
